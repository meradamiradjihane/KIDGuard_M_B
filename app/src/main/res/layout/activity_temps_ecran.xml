<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#E6F5FF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fontFamily="sans-serif">


    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="416dp"
        android:layout_height="84dp"
        android:background="#153E5C"
        >

        <TextView
            android:id="@+id/childNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif"
            android:text="Nom de l'enfant"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="-90dp"
        android:src="@drawable/logop"/>

    <TextView
        android:layout_width="411dp"
        android:layout_height="46dp"
        android:layout_marginHorizontal="1dp"
        android:layout_marginTop="54dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="sans-serif"
        android:text="Temps d'ecran "
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="35sp" />


    <!-- Horloge -->
    <ImageView
        android:id="@+id/clockImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_clock"
        android:layout_marginBottom="30dp"

        android:contentDescription="Horloge" />

    <!-- Limite d'heures -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="24dp"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <CheckBox
            android:id="@+id/checkboxLimiteHeures"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Limite d’heures"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextHeure"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:background="#FFFFFF"
            android:text="16:30"
            android:gravity="center"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true"
            android:padding="8dp"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Créneaux de -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <CheckBox
            android:id="@+id/checkboxCreneau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Créneaux de"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextCreneau"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:background="#FFFFFF"
            android:text="02:30"
            android:gravity="center"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true"
            android:padding="8dp"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnModeVacance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:text="Mode Vacance"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
     />
</LinearLayout>
