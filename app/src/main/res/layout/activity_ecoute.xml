<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E6F5FF"
    android:fontFamily="sans-serif">


    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="416dp"
        android:layout_height="84dp"
        android:background="#153E5C">

        <TextView
            android:id="@+id/childNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif"
            android:text="Nom de l'enfant"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="-90dp"
        android:src="@drawable/logop"/>

    <TextView
        android:layout_width="411dp"
        android:layout_height="62dp"
        android:layout_marginHorizontal="1dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="sans-serif"
        android:text="Mode Écoute"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="35sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="30dp">

        <ImageButton
            android:id="@+id/btnCamera"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:backgroundTint="#153E5C"
            android:background="@drawable/round_button_background"
            android:src="@drawable/ic_camera"
            android:contentDescription="Partage de caméra"
            app:tint="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Partage de Camera"
            android:textSize="16sp"
            android:textColor="#153E5C"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Bouton Écoute Vocale -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="20dp">

        <ImageButton
            android:id="@+id/btnAudio"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:backgroundTint="#153E5C"
            android:background="@drawable/round_button_background"
            android:src="@drawable/ic_microphone"
            android:contentDescription="Écoute vocale"
            app:tint="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ecoute vocale"
            android:textSize="16sp"
            android:textColor="#153E5C"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</LinearLayout>
