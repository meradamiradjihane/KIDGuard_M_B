<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/historiqueLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#E6F5FF"
    android:fontFamily="sans-serif">

    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="416dp"
        android:layout_height="84dp"
        android:background="#153E5C">

        <TextView
            android:id="@+id/childNameTextView"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif"
            android:text="Nom de l'enfant"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="-10dp"
        android:src="@drawable/logop"/>

    <TextView
        android:id="@+id/TitreViewSZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Historique"
        android:textColor="#153E5C"
        android:textSize="28sp"
        android:layout_marginTop="95dp"
        android:layout_marginHorizontal="120dp"/>
    <ListView
        android:id="@+id/historiqueListView"
        android:layout_width="397dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:background="@drawable/listview_background"
        android:clipToPadding="false"
        android:divider="#B0C4DE"
        android:dividerHeight="4dp"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="sans-serif" />


</RelativeLayout>
