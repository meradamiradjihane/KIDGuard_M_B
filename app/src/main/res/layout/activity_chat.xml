<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#E6F5FF"
    android:layout_width="match_parent"
    android:fontFamily="sans-serif"
    android:layout_height="match_parent"
  >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:background="#153E5C">

        <ImageView
            android:layout_width="94dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="1dp"
            android:src="@drawable/ic_user_shield" />

        <TextView
            android:id="@+id/contactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Contact"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="579dp"
        android:layout_weight="1"
        android:contentDescription="Liste des messages"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/chatLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="#153E5C"
        android:orientation="horizontal"
        android:padding="8dp">

        <EditText
            android:id="@+id/inputEditText"
            android:layout_width="397dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:hint="Envoyer un message"
            android:padding="16dp"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/sendButton"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/transparent"
            android:contentDescription="Envoyer le message"
            android:drawableEnd="@drawable/ic_send"
            android:padding="0dp" />


    </LinearLayout>

</LinearLayout>
